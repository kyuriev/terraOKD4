{
  "variables": {
    "disk_size": "120000"
  },

  "builders": [
    {
      "qemu_binary": "/usr/libexec/qemu-kvm",
      "type": "qemu",
      "vm_name": "fcos-worker.qcow2",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "sha256:{{user `iso_checksum`}}",
      "disk_size": "{{ user `disk_size` }}",
      "format": "qcow2",
      "accelerator": "kvm",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "memory": 8000,
      "cpus": 2,
      "net_bridge": "virbr0",
      "ssh_username": "core",
      "ssh_private_key_file": "/home/kor/.ssh/id_rsa",
      "shutdown_command": "sudo /sbin/shutdown -P -h now",
      "boot_command": [
        "<tab> coreos.inst.install_dev=/dev/vda coreos.inst.image_url=http://192.168.122.210:8080/okd4/fcos.raw.xz coreos.inst.ignition_url=http://192.168.122.210:8080/okd4/worker.ign ip=192.168.122.204::192.168.122.1:255.255.255.0:worker-1.okd4.local:ens3:none nameserver=192.168.122.210<enter><wait>",
        "<enter>",
        "<wait25m>",
        "reboot",
        "<enter>"
      ],
      "boot_wait": "1s"
    }
  ]
}